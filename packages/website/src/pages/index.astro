<style is:global>
	@import 'open-props/style';
	@import 'open-props/animations';

	* {
		box-sizing: border-box;
	}

	:root {
		--font-heading: 'Lora', ui-serif, Georgia, Cambria, 'Times New Roman', Times,
			serif;
		--font-lead: 'Lora', ui-serif, Georgia, Cambria, 'Times New Roman', Times,
			serif;
		--font-body: 'Source Sans Pro', ui-sans-serif, system-ui, -apple-system,
			BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial,
			'Noto Sans', sans-serif, 'Apple Color Emoji', 'Segoe UI Emoji',
			'Segoe UI Symbol', 'Noto Color Emoji';
		--font-mono: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
			'Liberation Mono', 'Courier New', monospace;
	}

	.wrapper  {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--size-3);
		padding: var(--size-3);
	}

	body {
		width: 100%;
		min-height: 100vh;
		padding: 0px;
		margin: 0px;
		font-family: var(--font-body);
		font-size: var(--font-size-1);
		background: var(--stone-1);
	}

	/* header */
	header {
		padding: 0 var(--size-3);
		display: flex;
		justify-content: space-between;
		align-items: center;
		background: white;
		width: 100%;
		border-bottom: 1px solid var(--teal-3);
	}

	header button {
		padding: var(--size-2);
	}

	/* profile card */

	form, .profile-card {
		max-width: 800px;
	}

	.profile-card {
		padding: var(--size-3);
		border-radius: var(--radius-2);
		border: 1px solid var(--teal-3);
		background: white;
		width: 100%;
		box-shadow: var(--shadow-1);
	}

	.pfp {
		width: 128px;
		height: 128px;
		border-radius: var(--radius-round);
	}

	/* basic form info */
	form {
		width: 100%;
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		justify-content: center;
		gap: var(--size-3);
		width: 100%;
		padding: var(--size-3);
		background: white;
		border-radius: var(--radius-2);
		border: 1px solid var(--teal-3);
	}

	form label {
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: var(--size-2);
		width: 100%;
	}

	input {
		border: 1px solid var(--teal-3);
		padding: var(--size-2) var(--size-2);
		border-radius: var(--radius-2);
		font-size: var(--font-size-1);
	}

	input:focus, button:focus {
		outline: 2px solid var(--teal-6);
		outline-offset: 3px;
	}

	form button { 
		width: 100%;
	}

	button {
		padding: var(--size-3) var(--size-4);
		border-radius: var(--radius-2);
		font-size: var(--font-size-1);
		border: 2px solid var(--teal-8);
		background: var(--teal-8);
		color: var(--teal-1);
		cursor: pointer;
	}

	button:hover {
		background: var(--teal-6);
		border: 2px solid var(--teal-6);
		color: white;
	}
</style>
